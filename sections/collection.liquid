{{ 'collection.css' | asset_url | stylesheet_tag }}
<div class="collection-plp mx-20">
  <div class="flex flex-col jusify-center items-center gap-16 pt-16">
    <h2>{{ collection.title }}</h2>
    <p class="muted-txt  mb-16">
      {{ collection.description }}
    </p>

  </div>

  
  <div class="plp-holder">
    <div class="sidebar flex flex-col items-center">
      <p>Side bar menu</p><p>Side bar menu</p><p>Side bar menu</p>
    </div>
    <div class="plp-contents px-8 flex flex-wrap justify-center gap-16 ">
      {% for product in collection.products %}
        {%  render 'product_card_detailed' | product : product %}
      {% endfor %}
    </div>
  </div>
  
</div>
