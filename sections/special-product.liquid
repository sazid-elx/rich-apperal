<div class="special-prod flex">
    <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}" width="300px" height="300px">
    <div class="info">
        <h3>{{ product.title }}</h3>
        <p>{{ product.description }}</p>
        <a href="{{ product.url }}" class="btn">Shop Now</a>
    </div>
</div>

{% schema %}
{
    "name": "Special Product",
    "settings": [
        {
            "label": "Product",
            "id": "product",
            "type": "product"
        }
    ],
    "presets": [
        {
            "name": "Special Product"
        }
    ]
}
{% endschema %}