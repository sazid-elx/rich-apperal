{{ 'search.css' | asset_url | stylesheet_tag }}

<div class="search-page mx-20">
    
    <div class="flex justify-center items-center search-bar">
      <form action="{{ routes.search_url }}" class="w-100 flex justify-center gap-8">
        <input class="general-input w-50" type="text"
          placeholder="Search... "
          name="q"
          value="{{ search.terms | escape }}"
       >
        <button class="b-w-btn short" type="submit" value="Search"> Search </button>
      </form>
    </div>

      <div class="search-result flex gap-16 flex-wrap mt-16">

        {% for result in search.results %}
           {%- render 'product_card_detailed', product: result -%}
        {% endfor %}
      </div>
</div>