<div class="blog mx-20">
  <h2>Latest Posts</h2>

  <div class="flex gap-16 flex-wrap mt-16 mb-16">
    {% for post in blog.articles %}
      <a href="{{ post.url }}">
        <div class="blog-post">
          <h3>{{ post.title }}</h3>
          <p class="muted-txt">{{ post.content | truncate: 50 }}</p>
        </div>
      </a>
    {% endfor %}
  </div>
</div>
