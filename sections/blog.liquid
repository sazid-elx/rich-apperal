{{ 'blog.css' | asset_url | stylesheet_tag }}

<div class="blog mx-4">
  <h2 class="text-2xl">Latest Posts</h2>

  <div class="flex gap-4 flex-wrap mt-4 mb-4">
    {% for post in blog.articles %}
      <a href="{{ post.url }}">
        <div class="blog-post-card flex flex-col gap-2 justify-center txt-center">
          <h3>{{ post.title }}</h3>
          <p class="muted-txt">{{ post.published_at | date: '%B %d, %Y' }}</p>
          <p >{{ post.content | truncate: 80 }}</p>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

