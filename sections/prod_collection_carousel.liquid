<div class="prod-collection-carousel mx-20" id="{{ section.id }}">
  <div class="flex flex-col justify-center gap-16 mb-16">
    <h1 class="txt-center">{{ section.settings.collection.title }}</h1>
    <button class="b-w-btn small" style="margin: 0 auto;">
      <a href="{{ section.settings.collection.url }}">Shop Now</a>
    </button>
  </div>

  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for product in section.settings.collection.products %}

        {% render 'product_card', product: product %}

      {% endfor %}
    </div>

  </div>
</div>

<script class="script-swiper" src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" async></script>
<script>
  {% comment %} document.addEventListener('DOMContentLoaded', function () { {% endcomment %}
  document.querySelector('.script-swiper').onload = function () {
    
    var swiper = new Swiper(".mySwiper", {
      slidesPerView: "auto",
      spaceBetween: 30,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    });
  }
  {% comment %} }); {% endcomment %}
</script>

<style>
  .product-card a {
    display: block;
  }

  .product-card a img {
    width: 100%;
  }
</style>

{% schema %}
{
  "name": "Collection Carousel",
  "settings": [
    {
      "label": "Product Collection Carousel",
      "id": "collection",
      "type": "collection"
    }
  ],
  "presets": [
    {
      "name": "Collection Carousel"
    }
  ]
}
{% endschema %}
