<div class="prod-collection-carousel" id="{{ section.id }}">

    <div class="flex flex-col justify-center gap-16 mb-16">
        <h1 class="txt-center">{{ section.settings.collection.title }}</h1>
        <button class="b-w-btn small" style="margin: 0 auto;">
          <a href="{{ section.settings.collection.url }}">Shop Now</a>
        </button>
        
      </div>

    <swiper-container navigation="true" space-between="30" slides-per-view="3">
        {% for product in section.settings.collection.products %}
          <swiper-slide>
            {% render 'product_card', product: product %}
          </swiper-slide>
        {% endfor %}
      </swiper-container>
</div>
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js" async></script>
<style>
    .product-card a {
      display: block;
    }
    .product-card a img {
      width: 100%;
    }
  </style>
{% schema %}
    {
        "name": "Collection Carousel",
        "settings": [
            {
                "label": "Product Collection Carousel",
                "id": "collection",
                "type": "collection"
            }
        ],
        "presets": [
            {
                "name": "Collection Carousel"
            }
        ]
    }
{% endschema %}