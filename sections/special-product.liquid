<div class="special-prod flex gap-16 mx-4">
    <img src="{{ section.settings.product.featured_image | image_url }}" alt="{{ product.title }}" width="300px" height="300px">
    <div class="info flex flex-col gap-4 pt-4 pb-4 justify-around">
        <h3 class="text-2xl">{{ section.settings.product.title }}</h3>
        <p>{{ section.settings.product.description }}</p>
        <a href="{{ section.settings.product.url }}" class="btn">
            <button class="b-w-btn">Shop Now</button>
        </a>
    </div>
</div>

{% schema %}
{
    "name": "Special Product",
    "settings": [
        {
            "label": "Product",
            "id": "product",
            "type": "product"
        }
    ],
    "presets": [
        {
            "name": "Special Product"
        }
    ]
}
{% endschema %}